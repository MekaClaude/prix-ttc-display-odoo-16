{
  "manifest_version": 3,
  "name": "Odoo 16 Tax Display Fix (Multi-store)",
  "version": "1.0.0",
  "description": "Recomputes and displays correct TTC on Odoo 16 when multiple stores are selected.",

  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "96": "icons/icon.png"
  },

  "action": {
    "default_title": "Odoo Tax Fix",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "http://1XX.XXX.XXX.X/web"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}